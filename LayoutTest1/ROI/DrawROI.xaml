<UserControl x:Class="LayoutTest1.DrawROI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LayoutTest1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Canvas x:Name="Top_Canvas_name">
        <Rectangle Fill="Transparent" Stroke="{Binding main_color}" StrokeThickness="5"
                   Width="{Binding ActualWidth, ElementName=Top_Canvas_name}" Height="{Binding ActualHeight, ElementName=Top_Canvas_name}"/>
        <Canvas 
            x:Name="ROI_paper" 
            PreviewMouseLeftButtonDown="ROI_paper_PreviewMouseLeftButtonDown" PreviewMouseRightButtonDown="ROI_paper_PreviewMouseRightButtonDown" MouseMove="ROI_paper_PreviewMouseMove" PreviewMouseLeftButtonUp="ROI_paper_PreviewMouseLeftButtonUp"
            Width="{Binding ActualWidth, ElementName=Top_Canvas_name}" Height="{Binding ActualHeight, ElementName=Top_Canvas_name}" 
            Background="Transparent">
            <!--transparent 속성이라도 없으면 Click 이벤트가 발생하지 않음-->
        </Canvas>
    </Canvas>
</UserControl>
